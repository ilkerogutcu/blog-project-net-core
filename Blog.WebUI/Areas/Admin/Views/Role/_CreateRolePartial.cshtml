@model Blog.Business.Features.Authentication.Commands.CreateRoleCommand

<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><span class="fas fa-plus"> </span>Create a new role</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Create" id="form-create-role" method="post" enctype="multipart/form-data">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()"/>
                    <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="false" style="display: none;"></div>
                    <div class="form-group">
                        <label asp-for="Name">Role name</label>
                        <input class="form-control" asp-for="Name" placeholder="Please enter the role name"/>
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-block" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary btn-block" id="btnSave"><span class="fas fa-save"> </span>Create</button>
            </div>
        </div>
    </div>
</div>